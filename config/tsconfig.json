{
	"compilerOptions": {
		"target": "es5",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"lib": ["dom", "es2015"],
		"plugins": [
      { 
				"name": "typescript-tslint-plugin",
				"configFile": "./config/tslint.json"
			}
    ]
	},
	"include": [
		"../src/**/*"
	],
	"exclude": [
		"../node_modules",
		"../build",
		"../dist",
		"../**/*.spec.ts"
	]
}