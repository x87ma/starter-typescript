{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2015",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"outDir": "../dist",
		"sourceMap": true,
		"esModuleInterop": true,
		"plugins": [
      { 
				"name": "typescript-tslint-plugin",
				"configFile": "./config/tslint.json"
			}
    ]
	},
	"include": [
		"../src/**/*"
	],
	"exclude": [
		"../node_modules",
		"../dist",
		"**/*.spec.ts"
	]
}